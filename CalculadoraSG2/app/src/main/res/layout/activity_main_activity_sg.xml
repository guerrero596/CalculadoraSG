<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.calculadorasg.MainActivitySG">

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F9DDDD"
        android:text="" />
    <LinearLayout
        android:id="@+id/CajaGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Resultado"
        android:layout_centerHorizontal="true"
        android:background="#F0E9E9"
        android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/PrimerBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

        <Button
            android:id="@+id/SegundoBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            />

        <Button
            android:id="@+id/TercerBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            />

        <Button
            android:id="@+id/CuartoBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            />

        <Button
            android:id="@+id/QuintoBotonBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            />



    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/SextoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />

            <Button
                android:id="@+id/SeptimoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                />

            <Button
                android:id="@+id/OctavoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                />

            <Button
                android:id="@+id/NovenoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                />

            <Button
                android:id="@+id/DecimoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/DecimoPrimeroBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                />

            <Button
                android:id="@+id/DecimoSegundoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                />

            <Button
                android:id="@+id/DecimoTerceroBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                />

            <Button
                android:id="@+id/DecimoCuartoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                />

            <Button
                android:id="@+id/DecimoQuintoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/DecimoSextoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                />

            <Button
                android:id="@+id/DecimoSeptimoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                />

            <Button
                android:id="@+id/DecimoOctavoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                />

            <Button
                android:id="@+id/DecimoNovenoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                />

            <Button
                android:id="@+id/VeinteavoBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                />


        </LinearLayout>


    </LinearLayout>

    </RelativeLayout>